<configure xmlns="http://namespaces.repoze.org/bfg"
           xmlns:formish="http://namespaces.repoze.org/formish">
           
  <include package="repoze.bfg.formish" file="meta.zcml"/>
    
  <!-- Routes -->
    
  <route 
    path=""
    name="invoices"
    view=".invoice.view_invoices"
    view_renderer="templates/invoices.pt"
    />
    
  <route
    path="/add_invoice"
    name="add_invoice"
    />
    
  <route
    path="/invoices/:invoice"
    name="edit_invoice"
    />
    
  <route 
    path="/customers"
    name="customers"
    view=".customer.view_customers"
    view_renderer="templates/customers.pt"
    />

  <route
    path="/add_customer"
    name="add_customer"
    />
    
  <route
    path="/customers/:customer"
    name="edit_customer"
    />
    
  <!-- Forms -->
  
  <formish:form
    name=""
    route_name="add_invoice"
    renderer="templates/invoice.pt"
    controller=".invoice.InvoiceController">

    <formish:action
      name="add"
      title="Add invoice"
      />

    <formish:action
      name="cancel"
      title="Cancel"
      validate="false"
      />

  </formish:form>
  
  <formish:form
    name=""
    route_name="edit_invoice"
    renderer="templates/invoice.pt"
    controller=".invoice.InvoiceController">

    <formish:action
      name="submit"
      title="Save"
      />

    <formish:action
      name="cancel"
      title="Cancel"
      validate="false"
      />

  </formish:form>
    
  <formish:form
    name=""
    route_name="add_customer"
    renderer="templates/customer.pt"
    controller=".customer.CustomerController">

    <formish:action
      name="add"
      title="Add customer"
      />

    <formish:action
      name="cancel"
      title="Cancel"
      validate="false"
      />

  </formish:form>
  
  <formish:form
    name=""
    route_name="edit_customer"
    renderer="templates/customer.pt"
    controller=".customer.CustomerController">

    <formish:action
      name="submit"
      title="Save"
      />

    <formish:action
      name="cancel"
      title="Cancel"
      validate="false"
      />

  </formish:form>
  
  <!-- Static resources -->
  
  <static
    name="static"
    path="templates/static"
    />
    
</configure>