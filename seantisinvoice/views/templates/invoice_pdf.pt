            <frame id="main" x1="2cm" y1="2cm" width="25cm" height="17cm" />
            <pageGraphics>
                <place x="0.5cm" y="0.5cm" width="10cm" height="1cm">
                    <para style="footer">seantis gmbh :: Unter der Egg 5 :: CH-6004 Luzern :: +41 41 511 22 50</para>
                </place>
            </pageGraphics>
                   
        </pageTemplate>
    </template>
    
    <stylesheet>
