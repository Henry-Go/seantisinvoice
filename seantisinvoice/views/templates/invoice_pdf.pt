        <paraStyle name="tableHeaderSmall" fontName="Helvetica" fontSize="4" alignment="center" />
        <paraStyle name="footer" fontName="Helvetica" fontSize="8" />
    </stylesheet>

    <story>
        <blockTable>
            <tr>
                <td>${invoice.project_description}</td>
            </tr>
        </blockTable>
    </story>

</document>