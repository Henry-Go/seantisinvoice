<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="main.macros['main']">

    <div metal:fill-slot="main_content">

	<div id="main_content">
	        
	    <h1>${title}</h1>
        
        <!--
        
        <div class="error">This is a new status message: There is an ERROR</div>
        <div class="notice">This is a new status message: There is an NOTICE</div>
        <div class="success">This is a new status message: There is an SUCCESS</div>
        
        -->
        
        <table>
            <thead>
                <tr>
                    <th>Project</th>
                    <th>Customer</th>
                    <th align="right">Amount</th>
                    <th align="right">Date</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr tal:repeat="invoice invoices" tal:attributes="class python:str(repeat['invoice'].odd() and 'even' or 'odd')">
                    <td><a href="${request.application_url}/invoices/${invoice.id}">${invoice.project_description}</a></td>
                    <td><a href="${request.application_url}/customers/${invoice.contact.customer.id}">${invoice.contact.customer.name}</a></td>
                    <td align="right">${'%.02f' % invoice.grand_total()}</td>
                    <td align="right">${invoice.date.strftime('%d.%m.%Y')}</td>
                    <td align="right"><a href="${request.application_url}/invoices/${invoice.id}/invoice_pdf"><img src="${request.application_url}/static/images/pdf_icon.png" alt="Download as PDF" /></a></td>
                </tr>
            </tbody>
        </table>
        
        <div class="controls">
             <a href="${request.application_url}/add_invoice"><button class="button-striking">Add invoice</button></a>
        </div>
        
    </div>
	</div>
	
</html>