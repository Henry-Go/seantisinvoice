<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      metal:use-macro="main.macros['main']">

    <div metal:fill-slot="main_content">

	<div id="main_content">
	        
	    <h1>Invoices</h1>
        
        <div class="error">This is a new status message: There is an ERROR</div>
        <div class="notice">This is a new status message: There is an NOTICE</div>
        <div class="success">This is a new status message: There is an SUCCESS</div>
        
        <a href="${request.application_url}/add_invoice">Add new invoice</a>
        
        <table>
            <thead>
                <tr>
                    <th>Project</th>
                    <th>Customer</th>
                    <th align="right">Amount</th>
                    <th align="right">Date</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr tal:repeat="invoice invoices" class="odd">
                    <td><a href="${request.application_url}/invoices/${invoice.id}">Beautiful new sofa</a></td>
                    <td><a href="${request.application_url}/customers/${invoice.customer.id}">${invoice.customer.name}</a></td>
                    <td>Hindukusch</td>
                    <td>${invoice.date}</td>
                </tr>
            </tbody>
        </table>
        
        <div class="controls">
            <button class="medium-button">Cancel</button>
            <button class="button-striking">Add new invoice</button>
        </div>
        
    </div>
	</div>
	
</html>